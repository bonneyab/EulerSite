@model IEnumerable<Contract.IProblemTest>
@{
    ViewData["Title"] = "Current Problems";
}
<h2>@ViewData["Title"]</h2>

<!-- Modal -->
<div class="modal fade" id="problemModal" tabindex="-1" role="dialog" aria-labelledby="ProblemModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="problem-modal-title">Modal title</h4>
            </div>
            <div id="problem-modal-body" class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        @foreach (var problem in Model)
            {
            <div class="panel panel-info problem-container" problem-id="@problem.FileName">
                <div class="panel-heading problem-title">
                    <h3 class="panel-title">@problem.Title</h3>
                </div>
                <div class="panel-body" hidden>
                    <div class="btn-toolbar" role="toolbar">
                        <div class="btn-group">
                            <button title="Execute" type="button" class="executable btn btn-primary" aria-label="Left Align" problem-id="@problem.FileName">
                                <span class="glyphicon glyphicon-play" aria-hidden="true"></span>
                            </button>
                            <button title="View Code" data-toggle="modal" data-target="#problemModal" type="button" class="view-code btn btn-primary" problem-id="@problem.FileName" aria-label="Left Align" >
                                <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
                            </button>
                        </div>
                    </div>

                    <h4>Description</h4>
                    <p>@problem.Description</p>
                    <h4>Answer</h4>
                    <p>@problem.Answer</p>
                </div>
            </div>
        }
    </div>
</div>